[Unit]
Description=Arivara Researcher WebSocket API Service
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/FULL_WEBSOCKET_ARIVARA_AI
Environment="PATH=/home/ubuntu/FULL_WEBSOCKET_ARIVARA_AI/venv/bin"
EnvironmentFile=/home/ubuntu/FULL_WEBSOCKET_ARIVARA_AI/.env
ExecStart=/home/ubuntu/FULL_WEBSOCKET_ARIVARA_AI/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000 --workers 4
Restart=always
RestartSec=10
StandardOutput=append:/home/ubuntu/FULL_WEBSOCKET_ARIVARA_AI/logs/service.log
StandardError=append:/home/ubuntu/FULL_WEBSOCKET_ARIVARA_AI/logs/service.error.log

# Security settings
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target

